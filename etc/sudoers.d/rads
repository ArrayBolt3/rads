## Allow (re)start of the display manager (dm) without password.
## Please leave it enabled, unless you know what you are doing.
%sudo ALL=NOPASSWD: /etc/init.d/kdm
%sudo ALL=NOPASSWD: /usr/sbin/service kdm *
%sudo ALL=NOPASSWD: /etc/init.d/gdm
%sudo ALL=NOPASSWD: /usr/sbin/service gdm *
%sudo ALL=NOPASSWD: /etc/init.d/gdm3
%sudo ALL=NOPASSWD: /usr/sbin/service gdm3 *
%sudo ALL=NOPASSWD: /etc/init.d/lightdm
%sudo ALL=NOPASSWD: /usr/sbin/service lightdm *
%sudo ALL=NOPASSWD: /etc/init.d/slim
%sudo ALL=NOPASSWD: /usr/sbin/service slim *
%sudo ALL=NOPASSWD: /etc/init.d/wdm
%sudo ALL=NOPASSWD: /usr/sbin/service wdm *
%sudo ALL=NOPASSWD: /etc/init.d/xdm
%sudo ALL=NOPASSWD: /usr/sbin/service xdm *
%sudo ALL=NOPASSWD: /etc/init.d/nodm
%sudo ALL=NOPASSWD: /usr/sbin/service nodm *
